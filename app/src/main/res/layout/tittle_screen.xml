<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TittleScreen">

    <ImageView
        android:id="@+id/start_screen_img_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/global_app_name"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_title_screen"
        tools:ignore="ImageContrastCheck"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/start_screen_rope2"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginStart="176dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/start_screen_tittle"
        app:layout_constraintStart_toStartOf="@+id/start_screen_tittle"
        app:layout_constraintTop_toTopOf="@+id/start_screen_img_bg"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rope"
        tools:ignore="ContentDescription,ImageContrastCheck,MissingConstraints,VisualLintBounds" />

    <ImageView
        android:id="@+id/start_screen_rope1"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="Rope"
        app:layout_constraintBottom_toBottomOf="@+id/start_screen_tittle"
        app:layout_constraintEnd_toEndOf="@+id/start_screen_tittle"
        app:layout_constraintTop_toTopOf="@+id/start_screen_img_bg"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rope"
        tools:ignore="HardcodedText,ImageContrastCheck,MissingConstraints,VisualLintBounds" />

    <TextView
        android:id="@+id/start_screen_tittle"
        android:layout_width="379dp"
        android:layout_height="84dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_rectangle_background"
        android:fontFamily="@font/finger_paint"
        android:gravity="center"
        android:text="@string/global_app_name"
        android:textColor="@color/text_color"
        android:textSize="39sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_screen_img_bg"
        tools:ignore="VisualLintOverlap,TextSizeCheck,TextContrastCheck" />

    <ImageView
        android:id="@+id/start_screen_dog_img"
        android:layout_width="243dp"
        android:layout_height="236dp"
        android:background="@drawable/shape_circle_with_border"
        android:contentDescription="@string/blackie_content_description"
        app:layout_constraintBottom_toBottomOf="@+id/start_screen_img_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_screen_img_bg"
        app:layout_constraintVertical_bias="0.498"
        app:srcCompat="@drawable/blackie_front"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/start_screen__touch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:background="@drawable/shape_rectangle_rounded"
        android:fontFamily="@font/coming_soon"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:shadowColor="@color/text_color"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:text="@string/start_screen_button_text"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/start_screen_dog_img"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/start_screen_dog_img"
        app:layout_constraintTop_toBottomOf="@+id/start_screen_dog_img"
        tools:ignore="VisualLintOverlap" />

    <Button
        android:id="@+id/start_screen_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/button"
        android:fontFamily="casual"
        android:gravity="bottom|center"
        android:onClick="StartGame"
        android:shadowColor="#020202"
        android:shadowDx="4"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="#00FFFFFF"
        android:textColorLink="#00D69595"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/start_screen_img_bg"
        app:layout_constraintEnd_toEndOf="@+id/start_screen_img_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_screen_img_bg"
        app:rippleColor="#00FFFFFF"
        app:strokeColor="#00FFFFFF"
        tools:ignore="VisualLintButtonSize,TextContrastCheck,RedundantDescriptionCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>