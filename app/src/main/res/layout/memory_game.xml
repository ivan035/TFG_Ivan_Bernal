<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_title_screen"
    tools:context=".games.MemoryGame">

    <ImageView
        android:id="@+id/memory_background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/image"
        android:scaleType="fitXY"
        android:scaleX="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memory_background_ui"
        app:srcCompat="@drawable/background_title_screen"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/memory_background_ui"
        android:layout_width="0dp"
        android:layout_height="123dp"
        android:alpha="1"
        android:background="@drawable/background_memory_ui"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/memory_card1"
        android:layout_width="112dp"
        android:layout_height="109dp"
        android:layout_marginTop="160dp"
        android:background="@color/dutch_white"
        android:contentDescription="@string/image"
        android:onClick="flip"
        android:soundEffectsEnabled="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

    <ImageView
        android:id="@+id/memory_card2"
        android:layout_width="112dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@color/dutch_white"
        android:contentDescription="@string/image"
        android:onClick="flip"
        android:soundEffectsEnabled="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/memory_card1"
        app:layout_constraintStart_toEndOf="@+id/memory_card1"
        app:layout_constraintTop_toTopOf="@+id/memory_card1"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/memory_card3"
        android:layout_width="112dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@color/dutch_white"
        android:contentDescription="@string/image"
        android:onClick="flip"
        android:soundEffectsEnabled="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/memory_card2"
        app:layout_constraintStart_toEndOf="@+id/memory_card2"
        app:layout_constraintTop_toTopOf="@+id/memory_card2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/memory_card4"
        android:layout_width="0dp"
        android:layout_height="109dp"
        android:layout_marginTop="16dp"
        android:background="@color/dutch_white"
        android:contentDescription="@string/image"
        android:onClick="flip"
        android:soundEffectsEnabled="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/memory_card1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/memory_card1"
        app:layout_constraintTop_toBottomOf="@+id/memory_card1"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/memory_card5"
        android:layout_width="112dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@color/dutch_white"
        android:contentDescription="@string/image"
        android:onClick="flip"
        android:soundEffectsEnabled="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/memory_card4"
        app:layout_constraintStart_toEndOf="@+id/memory_card4"
        app:layout_constraintTop_toTopOf="@+id/memory_card4"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/memory_card6"
        android:layout_width="112dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@color/dutch_white"
        android:contentDescription="@string/image"
        android:onClick="flip"
        android:soundEffectsEnabled="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/memory_card5"
        app:layout_constraintStart_toEndOf="@+id/memory_card5"
        app:layout_constraintTop_toTopOf="@+id/memory_card5"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/memory_card7"
        android:layout_width="0dp"
        android:layout_height="109dp"
        android:layout_marginTop="16dp"
        android:background="@color/dutch_white"
        android:contentDescription="@string/image"
        android:onClick="flip"
        android:soundEffectsEnabled="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/memory_card4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/memory_card4"
        app:layout_constraintTop_toBottomOf="@+id/memory_card4"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/memory_card8"
        android:layout_width="112dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@color/dutch_white"
        android:contentDescription="@string/image"
        android:onClick="flip"
        android:soundEffectsEnabled="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/memory_card7"
        app:layout_constraintStart_toEndOf="@+id/memory_card7"
        app:layout_constraintTop_toTopOf="@+id/memory_card7"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/memory_card9"
        android:layout_width="112dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@color/dutch_white"
        android:contentDescription="@string/image"
        android:onClick="flip"
        android:soundEffectsEnabled="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/memory_card8"
        app:layout_constraintStart_toEndOf="@+id/memory_card8"
        app:layout_constraintTop_toTopOf="@+id/memory_card8"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/memory_game_img_dog"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:contentDescription="@string/blackie_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/blackie_talking"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/memory_game_img_chatbox"
        android:layout_width="290dp"
        android:layout_height="170dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="60dp"
        android:contentDescription="@string/image"
        android:rotationY="-176"
        android:scaleX="2"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="@+id/memory_game_img_dog"
        app:layout_constraintEnd_toEndOf="@+id/memory_game_img_dog"
        app:srcCompat="@drawable/pngwing_chat_box"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/memory_game_dog_dialogue"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chelsea_market"
        android:gravity="center"
        android:text="@string/memory_game_default_dialogue"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/memory_game_img_chatbox"
        app:layout_constraintEnd_toEndOf="@+id/memory_game_img_chatbox"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="@+id/memory_game_img_chatbox"
        app:layout_constraintTop_toTopOf="@+id/memory_game_img_chatbox"
        app:layout_constraintVertical_bias="0.336"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/memory_difficulty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/finger_paint"
        android:gravity="center|start"
        android:shadowColor="@color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="@string/global_mode"
        android:textColor="@color/dutch_white"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/memory_game_time_bar"
        app:layout_constraintStart_toEndOf="@+id/memory_game_time_text"
        app:layout_constraintTop_toTopOf="@+id/memory_background_ui"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/memory_game_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/finger_paint"
        android:gravity="center|start"
        android:shadowColor="@color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="@string/global_score"
        android:textColor="@color/dutch_white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/memory_game_time_text"
        app:layout_constraintStart_toStartOf="@+id/memory_background_ui"
        app:layout_constraintTop_toTopOf="@+id/memory_game_time_text"
        app:layout_constraintVertical_bias="0.45"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

    <ProgressBar
        android:id="@+id/memory_game_time_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="48dp"
        android:alpha="0.9"
        android:background="@color/dutch_white"
        android:padding="5dp"
        android:progress="30"
        android:progressBackgroundTint="#B00020"
        android:progressBackgroundTintMode="screen"
        android:progressTint="@color/selected"
        app:layout_constraintBottom_toBottomOf="@+id/memory_background_ui"
        app:layout_constraintEnd_toEndOf="@+id/memory_background_ui"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/memory_background_ui" />

    <TextView
        android:id="@+id/memory_game_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/finger_paint"
        android:shadowColor="@color/white"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:text="@string/global_start_time"
        android:textColor="@color/third_colour"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/memory_game_time_bar"
        app:layout_constraintEnd_toEndOf="@+id/memory_game_time_bar"
        app:layout_constraintStart_toStartOf="@+id/memory_game_time_bar"
        app:layout_constraintTop_toTopOf="@+id/memory_background_ui"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/memory_game_stages_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/finger_paint"
        android:shadowColor="@color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="@string/memory_game_table_stage"
        android:textColor="@color/dutch_white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/memory_game_time_bar"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/memory_game_time_bar"
        app:layout_constraintTop_toBottomOf="@+id/memory_game_time_bar"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/memory_game_start_game"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/finger_paint"
        android:gravity="center"
        android:onClick="start_game"
        android:shadowDx="2"
        android:text="@string/blob_game_start_text"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/memory_game_end_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_rectangle_background"
        android:fontFamily="@font/finger_paint"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="#000000"
        android:textSize="27sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/memory_game_tomenu_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="finish_game"
        android:padding="5dp"
        android:text="@string/global_back_to_menu_button"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/memory_game_end_text"
        app:layout_constraintStart_toStartOf="@+id/memory_game_end_text"
        app:layout_constraintTop_toBottomOf="@+id/memory_game_end_text"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>