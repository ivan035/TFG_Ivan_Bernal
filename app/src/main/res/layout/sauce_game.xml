        android:id="@+id/sauce_game_timer_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tiempo:"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/sauce_game_score"
