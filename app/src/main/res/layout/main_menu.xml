<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <ImageView
        android:id="@+id/main_menu_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_main_menu"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/main_menu_img_chatbox"
        android:layout_width="293dp"
        android:layout_height="160dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="48dp"
        android:contentDescription="@string/image"
        android:rotationY="-176"
        android:scaleX="2"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="@+id/main_menu_img_dog"
        app:layout_constraintEnd_toEndOf="@+id/main_menu_img_dog"
        app:srcCompat="@drawable/pngwing_chat_box"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/main_menu_img_dog"
        android:layout_width="203dp"
        android:layout_height="113dp"
        android:contentDescription="@string/blackie_content_description"
        android:onClick="pet_blackie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/blackie_talking"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/main_menu_dog_dialogue"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:fontFamily="@font/chelsea_market"
        android:gravity="center"
        android:text="@string/main_menu_default_dialogue"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/main_menu_img_chatbox"
        app:layout_constraintEnd_toEndOf="@+id/main_menu_img_chatbox"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="@+id/main_menu_img_chatbox"
        app:layout_constraintTop_toTopOf="@+id/main_menu_img_chatbox"
        app:layout_constraintVertical_bias="0.333"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/main_menu_tittle_txt"
        android:layout_width="376dp"
        android:layout_height="82dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_rectangle_background"
        android:fontFamily="@font/finger_paint"
        android:gravity="center"
        android:padding="10dp"
        android:shadowColor="@color/third_colour"
        android:shadowDx="7"
        android:shadowDy="7"
        android:shadowRadius="30"
        android:text="@string/main_menu_select_activity_text"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/main_menu_memory_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/shape_rectangle_option"
        android:fontFamily="@font/chelsea_market"
        android:gravity="center"
        android:onClick="startMemoryGame"
        android:padding="13dp"
        android:text="@string/main_menu_memory_name"
        android:textColor="@color/carolina_blue_elbueno"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/main_menu_tittle_txt"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/main_menu_tittle_txt"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_tittle_txt" />

    <TextView
        android:id="@+id/main_menu_sauce_invasion_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_rectangle_option"
        android:fontFamily="@font/chelsea_market"
        android:gravity="center"
        android:onClick="startBlobGame"
        android:padding="13dp"
        android:text="@string/main_menu_blob_name"
        android:textColor="@color/carolina_blue_elbueno"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/main_menu_memory_button"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/main_menu_memory_button"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_memory_button" />

    <ImageView
        android:id="@+id/main_menu_option_sound"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/option_sound_background_enabled"
        android:onClick="mute_music"
        app:layout_constraintBottom_toTopOf="@+id/main_menu_tittle_txt"
        app:layout_constraintEnd_toEndOf="@+id/main_menu_tittle_txt"
        app:srcCompat="@drawable/option_sound_enabled" />

</androidx.constraintlayout.widget.ConstraintLayout>